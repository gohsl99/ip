<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="550.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainWindow">
    <children>
        <HBox spacing="5"
              AnchorPane.bottomAnchor="5"
              AnchorPane.leftAnchor="5"
              AnchorPane.rightAnchor="5">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           prefHeight="41.0"
                           HBox.hgrow="ALWAYS"
                           minWidth="0"
                           maxWidth="Infinity"/>
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        prefHeight="41.0"
                        prefWidth="125.0"
                        text="Send"
                        style="-fx-font-weight: bold;-fx-background-color: green;-fx-text-fill: white;-fx-font-size: 15px;" />
            </children>
        </HBox>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    prefHeight="657.0"
                    prefWidth="550.0"
                    vvalue="1.0"
                    fitToWidth="true"
                    fitToHeight="true"
                    AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="50"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="652.0"
                      prefWidth="545.0"
                      style="-fx-background-color: #d0eef5;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

